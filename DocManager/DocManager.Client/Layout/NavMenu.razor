@using Microsoft.AspNetCore.Components.Authorization

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Главная</MudNavLink>
    <AuthorizeView Roles="Администратор">
        <Authorized>
            <MudNavLink Href="Registrate" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AppRegistration">Регистрация</MudNavLink>
        </Authorized>
    </AuthorizeView>
    <AuthorizeView>
        <NotAuthorized>
                <MudNavLink Href="Login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Login">Вход</MudNavLink>
            </NotAuthorized>
        <Authorized>
            <MudNavLink Href="Document" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.DataObject">Создание документа</MudNavLink>
        </Authorized>
    </AuthorizeView>
</MudNavMenu>


